@model RegisterViewModel
@{
    ViewData["Title"] = "Register";
    var roles = new List<string>() {"Member" , "Admin" };
    Layout = null;
}


<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
<link rel="stylesheet" href="~/Prod.CarParking.styles.css" asp-append-version="true" />


<h1 class="m-4" >Register</h1>

<form asp-controller="Identity" asp-action="Register" method="post">
    @Html.ValidationSummary()

    <div class="form-group col-4 m-4">
        <label asp-for="Email">Email:</label>
        <input type="text" asp-for="Email" class="form-control" />
    </div>

    <div class="form-group col-4 m-4">
        <label asp-for="Password">Password:</label>
        <input type="text" asp-for="Password" class="form-control" />
    </div>

    <div class="form-group col-4 m-4">
        @Html.DropDownListFor(x => x.Role, roles.Select(s => new SelectListItem { Text = s, Value = s }), "Roles", null)
    </div>

    <button type="submit" class="btn btn-primary m-3">OK</button>
</form>

<div class="alert alert-info">
    If you already have an account, pelase <a asp-action="Login">Login</a>
</div>