@model LoginViewModel

@{
    ViewData["Title"] = "Login";
    Layout = null;
}




<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
<link rel="stylesheet" href="~/Prod.CarParking.styles.css" asp-append-version="true" />

<form asp-action="Login" method="post">

    @Html.ValidationSummary()
    <div class="form-group col-4 pt-xxl-5 mx-5">
        <label asp-for="Username"></label>
        <input type="text" asp-for="Username" />
    </div>

    <div class="form-group col-4 pt-xxl-3 mx-5">
        <label asp-for="Password"></label>
        <input type="password" asp-for="Password" />
    </div>

    <div class="form-group col-4 pt-xxl-3 mx-5">
        <input type="checkbox" asp-for="RememberMe" />Remember Me
    </div>

    <div class="form-group col-4 pt-xxl-3 mx-5">
    <button type="submit" class="btn btn-primary">Sign In</button>
   @* <a class="btn btn-primary" asp-controller="Identity" asp-action="Register">Register</a>*@
    </div>
</form>